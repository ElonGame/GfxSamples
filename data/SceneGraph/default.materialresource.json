{
	"_class"   : "MaterialResource",
	"_version" : 0,
	
 // \todo shared stuff can go outside the pass list (allow per-pass overrides?)
	"data" :
	{
		"color" : [ 1.0, 1.0, 1.0, 1.0 ]
	},

	"pass_list" : // \todo filter strings = keys, remove the pass_filters member
	[
	 // gbuffer ----
		{
			"pass_filters" : "gbuffer",

			"shader" :
			{
				"path" : "shaders/Default.glsl", // could also have separate paths
				"defines" : [ "PASS_gbuffer 1" ]
			},

			"states" : "opaque", // shortcut for depth test, depth write, no blending - could have a table of individual states too

			"textures" :
			{
				"txAlbedo" : "textures/albedo.dds", // also need to serialize the field names 
				"txRough"  : "textures/rough.dds",
				"txNormal" : "textures/normal.dds"
			}
		},

	 // shadow ----
		{
			"pass_filters" : "shadow",

			"shader" :
			{
				"path" : "shaders/Default.glsl",
				"defines" : [ "PASS_shadow 1" ]
			},

			"states" : "shadow"
		},
	]
}